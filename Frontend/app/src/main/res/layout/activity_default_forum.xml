<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DefaultForumActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="688dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="654dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of thread"
                android:gravity="center"
                 />

            <EditText
                android:id="@+id/poster_comment"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="8dp"
                android:textSize="10dp"
                android:hint="Initial comment here"
                android:gravity="top|left"/>
            <TextView
                android:id="@+id/hidden_thread_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#ff0000"
                />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow Explicit Comments?"
                />
            <Switch
                android:id="@+id/switchBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BOLD"
                android:onClick="Bold"/>

            <Switch
                android:id="@+id/switchItalicize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITALICIZE"
                android:onClick="Italicize"/>

            <Switch
                android:id="@+id/switchItalicizeBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITALICIZE AND BOLD"
                android:onClick="ItalicizeAndBold"/>


            <Button
                android:id="@+id/post_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="240dp"
                android:layout_marginVertical="275dp"
                android:onClick="PostThread"
                android:text="Post" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">



            </LinearLayout>


            <TextView
                android:id="@+id/hidden_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Testing"
                android:textColor="#ff0000"
                android:visibility="gone" />




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>