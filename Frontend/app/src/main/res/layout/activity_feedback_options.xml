<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeedbackOptionsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="688dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:id="@+id/cardview_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="654dp"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/options"
                android:text="Why are you sending Feedback?"
                android:textColor="#000000"
                android:textSize="18dp"
                android:gravity="center"
                />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reporting a technical problem?"
                android:id="@+id/technical_problem"
                />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area we should improve upon?"
                android:id="@+id/improvement"
                />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you want us to add another feature?"
                android:id="@+id/feature"
                />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/other"
                />




            <Button
                android:id="@+id/email_button"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:text="Proceed"
                android:onClick="Proceed"
                android:backgroundTint="#FFD600"
                />
            <TextView
                android:id="@+id/hidden_feedback_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#ff0000"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
